<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireBaseAuth.Pages.PasswordResetPage"
             xmlns:models="clr-namespace:FireBaseAuth.Models"
             xmlns:viewModels="clr-namespace:FireBaseAuth.ViewModels"
             x:DataType="viewModels:AuthViewModel"
             Title="PasswordResetPage">
    <VerticalStackLayout>
        <Entry Placeholder="Please Enter Your Email" Text="{Binding User.email}"/>
        <Button Text="Submit" Command="{Binding SendPasswordResetEmailCommand}"/>
    </VerticalStackLayout>
</ContentPage>